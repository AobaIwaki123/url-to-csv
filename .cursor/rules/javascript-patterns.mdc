// Use Sets for efficient lookups (exact implementation from panel.js)
const IMAGE_EXTS = new Set([
  ".png", ".jpg", ".jpeg", ".gif", ".webp", 
  ".svg", ".avif", ".bmp", ".ico"
]);

// Global state variables
